<% content_for(:html_title) { "Characters"} %>

<h2 class="title is-2">Star Wars Characters</h2>

<h4>Search by Character:</h4>
  <%= form_tag(characters_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search") %>
  <% end %>

<ol class="ml-5">
  <% @characters.each do | character | %>
    <li><%= link_to character.name, character %></li>
  <% end %>
</ol>
