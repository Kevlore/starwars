<% content_for(:html_title) { "Films" } %>

<h2 class="title is-2">Star Wars Films</h2>

<h4>Search by Film:</h4>
<div class="field has-addons">
  <div class="control">
    <%= form_tag(films_path, method: :get) do %>
      <%= text_field_tag(:search, params[:search], class: "input is-danger is-inline") %>
      <%= submit_tag("Search", class: "button is-danger") %>
    <% end %>
  </div>
</div>

<ol class="ml-5">
  <% @films.each do | film | %>
    <li><%= link_to film.title, film %> (<%= film.release_date %>)</li>
  <% end %>
</ol>
