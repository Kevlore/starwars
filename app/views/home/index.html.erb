<div class="columns">
  <div class="column">
    <h2 class="title is-2">Films</h2>
    <ol class="ml-5">
      <% @films.each do |film| %>
        <li><%= link_to film.title, film %></li>
      <% end %>
    </ol>
  </div>

  <div class="column">
    <h2 class="title is-2">Characters</h2>
    <ol class="ml-5">
      <% @characters.each do |character| %>
        <li><%= link_to character.name, character %></li>
      <% end %>
    </ol>
  </div>

  <div class="column">
    <h2 class="title is-2">Species</h2>
    <ol class="ml-5">
      <% @species.each do |specy| %>
        <li><%= link_to specy.name, specy %></li>
      <% end %>
    </ol>
  </div>
</div>